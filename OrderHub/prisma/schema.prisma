generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShopingItem {
  id            String  @id @default(uuid())
  name          String
  count         Int
  shopingListId String
  shopingList   ShopingList @relation(fields: [shopingListId], references: [id])
}

model ShopingList {
  id        String  @id @default(uuid())
  products  ShopingItem[]
  orderId   String
  order     Order?   @relation(fields: [orderId], references: [id])
}

model Step {
  id            String  @id @default(uuid())
  description   String
  deadline      DateTime
  isFinished    Boolean
  orderId       String
  order         Order   @relation(fields: [orderId], references: [id])
}

model Order {
  id            String  @id @default(uuid())
  orderBy       String
  shopingList   ShopingList?
  Steps         Step[]
  createdAt     DateTime
}
